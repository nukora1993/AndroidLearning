<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Hello World!"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="execution results will show here"
        android:textSize="14sp"
        android:id="@+id/result_show"
        android:ellipsize="end"
        android:maxLines="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type something here and click write button"
        android:id="@+id/data_to_write"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_data_from_share_app1_with_activity"
        android:text="read data from ShareApp1 by Activity"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_to_share_app1_with_activity"
        android:text="write data to ShareApp1 by Activity"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_data_from_share_app1_with_broadcast"
        android:text="read data from ShareApp1 by BroadCast"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_to_share_app1_with_broadcast"
        android:text="write data to ShareApp1 by BroadCast"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_data_from_share_app1_with_aidl"
        android:text="read data from ShareApp1 by AIDL"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_to_share_app1_with_aidl"
        android:text="write data to ShareApp1 by AIDL"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_to_share_app1_with_socket"
        android:text="write data to ShareApp1 by Socket"
        android:enabled="false"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_data_from_share_app1_with_socket"
        android:text="read data from ShareApp1 by Socket"
        android:enabled="false"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_data_from_share_app1_with_content_provider"
        android:text="read data from ShareApp1 by Content Provider"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_data_to_share_app1_with_content_provider"
        android:text="write data to ShareApp1 by Content Provider"
        android:textAllCaps="false"/>








    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clear_result_show"
        android:text="clear result"
        android:textAllCaps="false"/>

</LinearLayout>